
<div class="container">
<% if @show_register %>
  <script>
    $(function(){   
      $(".modal_login").show()           
      $('.close').click(function(){
        $(".modal_login").css("display", "none")
      }); 
    })
  </script>
<%end%>

<p id="notice"><%= notice %></p>
<%= render 'posts/modal'%>

<div>
<%= form_tag posts_path, :method => 'get' do %>
<%= text_field_tag :search, params[:search], placeholder: 'Search' %>
<%= submit_tag "Search",  class: 'butn'%>

<% end %>
<%= link_to 'Home', posts_path %>
</div>
</div>

<div class="container">
<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="1"></th>
      <th>Visitors</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><img src='<%= post.image %>' width='100px'></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= post.views%></td>
      </tr>
    <% end %>
    <% if !current_autor.nil? %>
<%= link_to 'New Post', new_post_path %>
<% end %>
  </tbody>
</table>
</div>
<br>


<%= will_paginate @posts %>